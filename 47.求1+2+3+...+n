class Solution:
    def Sum_Solution(self, n):
        # write code here
        ans = n
        temp = ans and self.Sum_Solution(n-1)
        ans = ans+temp
        return ans
#2.
class Solution:
    def Sum_Solution(self, n):
        # write code here
        return n and (n + self.Sum_Solution(n - 1))
